<p>
  <strong>Titre:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Pochette:</strong>
  <%= image_tag @movie.cover.url('thumb') %>
</p>

<p>
  <strong>Durée:</strong>
  <%= @movie.duration %>
</p>

<p>
  <strong>Résumé:</strong>
  <%= @movie.summary %>
</p>

<p>
  <strong>Note de l'équipe:</strong>
  <%= @movie.staff_notation %>
</p>

<%= link_to 'Retour', movies_path %>

<h2>Participants</h2>

<% @movie_characters.each do |movie_character| %>
  <% if movie_character.character %>
    <%= movie_character.character.first_name %> - 
    <%= MovieCharacter::ROLES[movie_character.role] %> : <%= link_to "Voir plus d'informations", character_path(movie_character.character) %>
    <br>
  <% end %>
<% end %>

<h2>Commentaires</h2>

<% @comments.each do |comment| %>
 Par : <%= comment.user.email %> <br>
 Le : <%= comment.created_at %> <br>
 Commentaire : <%= comment.comment %> <br>
 Note : <%= comment.notation %> 
 <% if current_user.admin %>
  <br> <%= link_to 'Supprimer', admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
 <% end %>
 <hr>
<% end %>

<%= render 'comments/form' %>