<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<h2>Participants</h2>

<% @movie_characters.each do |movie_character| %>
  <% if movie_character.character %>
    <%= movie_character.character.first_name %> - 
    <%= MovieCharacter::ROLES[movie_character.role] %> - 
    <%= link_to 'Supprimer', movie_character, method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
  <% end %>
<% end %>