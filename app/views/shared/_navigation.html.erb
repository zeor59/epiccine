<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to (image_tag "banner.png") + "Epic cine", root_path, class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li <% if current_page?(:controller => '/movies') %>class="active"<% end %>>
          <%= link_to t('nav.movies'), movies_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav">
        <li <% if current_page?(:controller => '/cinemas') %>class="active"<% end %>>
          <%= link_to t('nav.cinemas'), cinemas_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('nav.languages') %><b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><%= link_to "FR", url_for( :locale => 'fr' ) %></li>
                <li><%= link_to "EN", url_for( :locale => 'en' ) %></li>
            </ul>
        </li>
    <% if user_signed_in? %>  
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><%= link_to t('nav.edit_profile'), edit_user_registration_path %></li>
                <% if current_user.admin %>
                <li><%= link_to t('nav.admin'), admin_root_path %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to t('nav.logout'), destroy_user_session_path, method: 'delete' %></li>
            </ul>
        </li>
    <% else %>
        <li> <%= link_to t('nav.login'), new_user_session_path, { 'class' => 'glyphicon glyphicon-user' } %> </li>
    <% end %>
    </ul>
    </div>
  </div>
