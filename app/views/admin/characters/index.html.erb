<h1>Liste des personnes</h1>

<table class="table table-striped">
  <thead>
    <tr class="info">
      <th>Pr√©nom</th>
      <th>Nom</th>
      <th>Age</th>
      <th>Biographie</th>
      <th><span class="glyphicon glyphicon-picture"></span></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.last_name %></td>
        <td><%= character.first_name %></td>
        <td><%= character.age %></td>
        <td><%= character.biography %></td>
        <td><%= image_tag character.picture.url %></td>
        <td><%= link_to 'Voir', admin_character_path(character) %></td>
        <td><%= link_to 'Modifier', edit_admin_character_path(character) %></td>
        <td><%= link_to 'Supprimer', admin_character_path(character), method: :delete, data: { confirm: 'Confirmez vous la suppression ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @characters %>
<%= link_to 'Ajouter une personne', new_admin_character_path, class: 'btn btn-success' %>
