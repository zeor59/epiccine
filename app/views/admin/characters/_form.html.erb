<%= simple_form_for ['admin', @character] do |f| %>
    <%= f.input :first_name, label: 'Nom'  %>
    <%= f.input :last_name, label: 'Prénom'  %>
    <%= f.input :birthday, as: 'string', label: 'Date de naissance' %>
    <%= f.input :picture, label: 'Photo'  %>
    <%= f.input :biography, label: 'Biographie'  %>
    <br />
    <%= f.button :submit, 'Valider la sélection' %>
<% end %>