<h2>Login</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">E-mail</label>
    <div class="col-sm-10">
      <%= f.input_field :email, :required => false, :autofocus => true, class: 'form-control' %>
    </div>
  </div>
  &nbsp;
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Mot de passe</label>
    <div class="col-sm-10">
      <%= f.input_field :password, :required => false, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.input_field :remember_me, :as => :boolean if devise_mapping.rememberable? %>Se souvenir de moi?
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Connexion</button>
      <br /><br />
      <%= render "devise/shared/links" %>
    </div>
  </div>
</form>
<% end %>


